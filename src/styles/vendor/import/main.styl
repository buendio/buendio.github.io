body {
  font-family: 'Roboto', serif;
  margin: 0;
  padding: 0;
  background: #fff;
  color: #1b1b1b;
  overflow-x: hidden;
  overflow-y: scroll;
}

*, ::after, ::before {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

h1, h2, h3, h4, h5, h6, p, ul, li {
  margin: 0;
  padding: 0;
}

.m2
  display inline-flex
  &:after
    content '2'
    display inline-block
    font-size 16px
    margin-left 1px
  &_font-bold:after
    font-weight bold
