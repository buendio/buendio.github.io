.block14 { display: flex; flex-wrap: wrap; margin: 0 -15px -15px; }
.block14__item { width: 100%; margin: 0 15px; padding: 25px 15px; margin-bottom: 15px; background: #EDEDED; transition: .3s; }
.block14__title { color: #000; font-size: 20px; font-weight: 500; line-height: 1.3; margin-bottom: 30px; padding-bottom: 15px; border-bottom: 7px solid #d64356; }
.block14__text { font-weight: 300; font-size: 16px; line-height: 1.45; color: #474747;opacity 0.7; }
.block14__item:hover { color: #fff; background: #d64356; }
.block14__item:hover .block14__title { color: #fff; border-bottom: 7px solid #B43242; }
.block14__item:hover .block14__text { color: #fff; }

@media (min-width: 768px) {
    .block14__item { padding: 36px; width: calc(50% - 30px); }
}

@media (min-width: 992px) {
    .block14__item { padding: 36px; width: calc(33.33% - 30px); }
    .block14__title { font-size: 28px; line-height: 36px; }
    .block14__text { font-size: 18px; }
}