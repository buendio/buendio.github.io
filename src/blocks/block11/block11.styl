.block11 {
  margin: 0 -10px -20px; display: flex; flex-wrap: wrap;

  &__item { width: 100%; padding: 0 10px; padding-bottom: 20px; display: flex; flex-direction: column; }
  &__item-inner { position: relative; color: #fff; overflow: hidden; padding: 24px; display: flex; flex-direction: column; background-color: #D64356; transition: .3s; }

  &__pattern, &__pattern-hover { content: ''; position: absolute; top: 0; right: 0; width: 100%; height: 100%; transition: .3s; }
  &__pattern-hover { transform: translateX(-100%); }

  &__item-inner:hover { background-color: #2E3139; }
  &__item-inner:hover &__pattern { transform: translateX(-100%); }
  &__item-inner:hover &__pattern-hover { transform: translateX(0); }
  &__top { position: relative; z-index: 1; display: flex; justify-content: space-between; margin-bottom: 70px; }
  &__top-title { font-weight: 500; font-size: 27px; line-height: 1.3; }
  &__icon-box { width: 50px; height: 50px; background: #fff; border-radius: 8px; display: flex; justify-content: center; align-items: center; }
  &__icon { fill: #D64356; width: 31px; height: 31px; }
  &__content { position: relative; z-index: 1; margin-top: auto; }
  &__title { font-weight: 500; font-size: 21px; line-height: 1.3; display: flex; align-items: flex-end; margin-bottom: 13px; }
  &__desc { font-weight: 300; font-size: 15px; line-height: 1.5; }

  &_width1 &__item { width: 100%; }

  &_small &__top { margin-bottom: 15px; }
  &_small &__top-title { font-size: 24px; }
  &_small &__title { font-size: 20px; }
  &_small &__desc { font-weight: 300; font-size: 15px; }

  &_white &__item-inner:hover { background: linear-gradient(180deg, #D0E4F9 0%, #F1F8FF 100%); }
  &_white &__item-inner { background-color: #fff; }
  &_white &__top-title { color: #4E535F; }
  &_white &__title { color: #4E535F; }
  &_white &__desc { color: #5A5C62; }
  &_white &__icon-box { border: 1px solid rgba(214, 67, 86, 0.15); }
}

@media (min-width: screen-md-min) {
  .block11 {
    &__item { width: 33.33%; }
    &__item-inner { padding: 29px; }
    &__top-title { font-size: 35px; }
    &__title { font-size: 28px; }
    &__desc { font-size: 17px; }

    &_small &__top-title { font-size: 24px; }
  }
}