.global-menu {
  position: fixed;
  top: 50px;
  right: 40px;
  z-index: 100000;
  width: 100%;
  height: 100%;
  transform: scale(0) translate3d(0, 0, 0);
  transform-origin: right top;
  transition: all .3s;
  background: #262c3a;
  border-radius: 100px;
}

.global-menu.open {
  -webkit-border-radius: 0;
  border-radius: 0;
  -webkit-transform: scale(1) translate3d(40px, -50px, 0);
  transform: scale(1) translate3d(40px, -50px, 0);
}

.global-menu__header {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
  padding: 41px 40px 0;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  -ms-flex-pack: justify;
  justify-content: space-between;
}

.global-menu__close,
.global-menu__logo {
  cursor: pointer;
}

.global-menu__close img {
  height: 28px;
}

.global-menu__logo img {
  height: 24px;
}

.global-menu__content {
  height: calc(100% - 69px);
  max-height: calc(100% - 69px);
  padding: 70px 0 50px;
  display: block;
  position: relative;
  overflow: hidden auto;
  width: 100%;
  max-width: 100%;
}

.global-menu .menu {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-wrap: wrap;
  -ms-flex-wrap: wrap;
  flex-wrap: wrap;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
  -ms-flex-align: start;
  align-items: flex-start;
  margin: 0 -30px;
}

.global-menu .sub-menu>li,
.global-menu .menu>li {
  list-style: none;
}

.global-menu .menu>li {
  padding: 0 30px;
  width: 25%;
}

.global-menu .menu>li>a {
  position: relative;
  color: #ffffff;
  font-family: Roboto;
  font-size: 20px;
  padding: 9px 0;
  display: inline-block;
  font-weight: 700;
  line-height: 1.1;
  text-decoration: none;
}

.global-menu .menu a:before {
  content: '';
  position: absolute;
  bottom: 15px;
  left: -5px;
  width: calc(100% + 10px);
  height: 11px;
  background-color: #d64356;
  z-index: -1;
  -webkit-transition: .25s;
  -o-transition: .25s;
  transition: .25s;
  -webkit-transform: translate3d(-20px, 0, 0);
  transform: translate3d(-20px, 0, 0);
  opacity: 0;
}

.global-menu .menu a:hover:before {
  opacity: 1;
  -webkit-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
}

.global-menu .menu-menu-container {
  height: 100%;
}

@media(max-width: 768px) {
  .global-menu {
    max-height: 100%;
    overflow: auto;
  }
  .global-menu__content {
    max-height: initial;
    height: auto;
  }

  .global-menu .menu-menu-container {
    overflow: auto;
    width: 100%;
  }

  .global-menu .menu {
    padding: 0;
    margin: 0;
  }
}

.global-menu .sub-menu {
  padding: 15px 0 25px 0;
}

.global-menu .menu>li.open>.sub-menu {
  display: block;
}

.global-menu .sub-menu>li>a {
  position: relative;
  color: #ffffff;
  font-family: Roboto;
  font-size: 16px;
  font-weight: 400;
  line-height: 1.3;
  text-decoration: none;
  margin: 8px 0;
  display: block;
}

.global-menu .sub-menu a:before {
  bottom: 0;
  height: 9px;
}

.global-menu a[href='#'] {
  opacity: 0.5;
}