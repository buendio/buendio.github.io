.block22 {
  height: 100%; margin: 0 -10px -10px; display: flex; flex-wrap: wrap;

  &__item { width: 100%; margin: 10px; padding: 28px 30px 0 30px; overflow: hidden; background: #fff; display: flex; flex-direction: column; justify-content: space-between; transition: .3s; }
  &__title { color: #2B2F3B; height: 60px; font-weight: 500; font-size: 26px; line-height: 1.15; margin-bottom: 28px; overflow: hidden; }
  &__title_height90 { height: 90px }
  &__text { color: #585D68; font-weight: 300; font-size: 15px; line-height: 1.33; margin-bottom: 29px; }
  &__text-p { margin-bottom: 15px; }
  &__text-p:last-child { margin-bottom: 0; }
  &__footer { margin: 0 -28px; display: flex; }
  &__footer-item { width: 33.33%; padding: 24px 30px; display: flex; align-items: center; justify-content: center; }
  &__footer-number { color: #D64356; font-weight: 300; font-size: 42px; line-height: 0.62; margin-right: 6px; }
  &__footer-number-box-title { color: #D64356; font-size: 16px; line-height: 10px; margin-bottom: 14px; font-weight: 300; }
  &__footer-text { color: #333333; font-size: 15px; line-height: 1.33; }
  &__footer-signature { color: #6C7588; font-size: 15px; line-height: 1.33; font-weight: 300; padding: 13px 23px; }

  &__footer_border { border-top: 1px solid #EDEDED; }
  &__footer_border &__footer-item { border-right: 1px solid #EDEDED; }
  &__footer_border &__footer-item:last-child { border-right: none; }

  &__footer_first { margin: 0; padding-bottom: 30px; }
  &__footer_first &__footer-item { width: 100%; padding: 0; justify-content: flex-start; }
  &__footer_first &__footer-number { margin-right: 10px; }

  &__item:hover { background: url('../img/blocks/pattern-hover.svg') #D64356 center right/contain no-repeat; }
  &__item:hover &__title { color: #fff; }
  &__item:hover &__text { color: #fff; }
  &__item:hover &__footer-number { color: #fff; }
  &__item:hover &__footer-text { color: #fff; }
  &__item:hover &__footer-signature { color: #fff; }
  &__item:hover &__footer-number-box-title { color: #fff; }
  &__item:hover &__footer_border { border-color: transparent; }
  &__item:hover &__footer_border &__footer-item { border-color: transparent; }
}

@media(min-width: screen-md-min) {
  .block22 {

    &__item { width: calc(33.33% - 20px); }

    &_width1 &__item { width: 100%; height: 100%; }
  }
}