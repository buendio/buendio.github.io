.header {
  width: 100%; height: 60px; display: flex; align-items: center; justify-content: space-between; transition: .3s;

  &__logo { width: 130px; height: 28px; fill: #fff; }

  /* удалить в будущем, если на внутряках якорных ссылок */
  &__anchors-item { color: #fff; margin: 0 10px; font-weight: 300; font-size: 16px; line-height: 24px; text-decoration: none; }

  &__right-item { display: flex; align-items: center; flex: none; margin-right: 35px; text-decoration: none; }
  &__right-item:last-child { margin-right: 45px; }
  &__icon { width: 14px; height: 14px; fill: #ABB1BF; margin-right: 7px; }
  &__text { color: #A5ACBB; font-size: 15px; line-height: 18px; transition: .3s; }
  &__right-item:hover &__icon { fill: #000; }
  &__right-item:hover &__text { color: #000; }

  &__language { color: #ABB0BC; padding: 10px; font-size: 14px; font-weight: 500; background: #F3F3F3; border-radius: 25px;  text-transform: uppercase; text-decoration: none; transition: .3s; }
  &__right { display: flex; align-items: center; }
  &__right &__btn { padding-left: 27px; padding-right: 27px; margin-right: 10px; }
  &__mobile-btn { display: none; }
  &__mobile-phone-icon { fill: #fff; width: 25px; height: 25px; }

  &_main &__logo { width: 102px; height: 22px; }

  /* удалить в будущем, если на внутряках якорных ссылок */
  &_main &__anchors-item { color: #1b1b1b; }

  &_main &__mobile-phone-icon { fill: #252b39; }

  &_scroll { background: #ffffff !important; }
  &_scroll &__logo { fill: #d64356; }
  &_scroll &__anchors-item { color: #1b1b1b; }
  &_scroll &__language, &_main &__language { color: #252b39; }
  &_scroll &__mobile-phone-icon { fill: #252b39; }

  &__language:hover { color: #f5f5f5; background: #868686; }
}

@media(max-width: screen-lg-min) {
  .header {
    &__logo { width: 100px; }

    /* удалить в будущем, если на внутряках якорных ссылок */
    &__anchors-item { margin: 0 7px; font-size: 15px; line-height: 24px; }
    &__anchors-item:nth-child(5), &__anchors-item:nth-child(6), &__anchors-item:nth-child(7) { display: none; }

    &__right &__btn { padding: 10px; }
  }
}

@media(max-width: screen-sm-max) {
  .header {

    /* удалить в будущем, если на внутряках якорных ссылок */
    &__anchors { display: none; }
  }
}

@media(max-width: screen-xs-max) {
  .header {
    &__right-item { display: none; }
    &__right &__btn, &__right &__mobile-btn { order: 2; margin: 0 0 0 15px; }
  }
}

@media(max-width: screen-xxs-max) {
  .header {
    &__right &__btn { display: none; }
    &__mobile-btn { display: block; }
  }
}