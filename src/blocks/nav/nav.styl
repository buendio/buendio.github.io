.nav {
  position: relative; width: 100%; background: #fff;
  .html_nav-scroll & { position: fixed; top: 0; z-index: 50; box-shadow: 0 0 10px 0 #e4e4e4; animation-duration: 0.9s; animation-fill-mode: both; animation-name: nav_animation; }
  .html_nav-scroll &_active { width: calc(100% - 17px); }

  @keyframes nav_animation { from { transform: translateY(-120%); } to { transform: translateY(0%); }}

  &__container { z-index: 10; padding: 13px 15px; display: flex; align-items: center; justify-content: space-between; border-top: 1px solid #EBECEE; }
  &__item { color: #5A5D65; font-size: 15px; line-height: 19px; }
  &__item:hover { text-decoration: underline; }
  &__submenu { position: absolute; top: 66px; left: 50%; z-index: 10; width: 100%; overflow: hidden; transform: scaleY(0) translateX(-50%); opacity: 0;
    transform-origin: 0 0; transition: .5s ease-in-out; box-shadow: 0 50px 50px rgba(36, 40, 52, 0.15); }
  &__scroll { width: 100%; height: calc(100vh - 125px); margin: 0 auto; overflow-y: auto; padding: 0 140px; background: #F1F6FB; }

  .html_nav-scroll &__scroll { height: calc(100vh - 66px); }

  &__item-box:hover &__submenu { opacity: 1; transform: scaleY(1) translateX(-50%); }

  &__bar { position: absolute; top: 0; right: 4px; z-index: 1; width: 8px; min-height: 50px; border-radius: 3px; background: #d64356; opacity: .3; display: none; transition: width .2s linear; }
  &__bar:hover { opacity: .8; }
  &__bar_state_on { display: block; }

  &__submenu-head { margin: 35px 0; }
  &__submenu-head-title-box { display: flex; align-items: center; }
  &__submenu-head-title { color: #333333; font-size: 36px; line-height: 32px; font-weight: normal; }
  &__submenu-head-btn { color: #000; background: transparent; margin-left: 35px; }

  &__burger { width: 36px; cursor: pointer; }
  &__burger-line { position: relative; width: 36px; height: 2px; background: #ABB1BF; margin-bottom: 7px; }
  &__burger-line:last-child { left: 10px; width: 26px; margin-bottom: 0; transition: all 100ms linear; }
  &__burger:hover &__burger-line { left: 0; width: 36px; }

  &__hidden { position: fixed; top: 0; left: 0; z-index: 10; width: 100%; height: 100%; padding-top: 40px; overflow-y: auto; background: #3D4047; display: none; }
  .html_nav-hidden-open &__hidden { overflow-y: scroll; display: block; }
  .html_nav-hidden-open & { height: 100%; }
  &__hidden-container { padding: 0 120px; }
  &__hidden-container_border-top { border-top: 1px solid #313339; }
  &__hidden-close { position: absolute; top: 0; right: 0; opacity: .5; width: 50px; height: 50px; border: none; cursor: pointer; background: #313339; transition: .3s; }
  &__hidden-close:hover { opacity: 1; }
  &__hidden-close:after, &__hidden-close:before { content: ''; position: absolute; top: 23px; left: 10px;  width: 30px; height: 2px; background: #fff; transform: rotate(45deg); }
  &__hidden-close:before { transform: rotate(-45deg); }
  &__hidden-logo { display: block; margin-bottom: 40px; }
  &__hidden-logo-icon { width: 102px; height: 22px; }

  &__hidden-item-box { color: #fff; display: flex; flex-wrap: wrap; justify-content: space-between; }
  &__hidden-item { position: relative; width: 25%; padding: 30px 0 10px; padding-right: 10%; }
  &__hidden-item-line { position: absolute; top: 0; left: 0; width: 100%; height: 3px; }
  &__hidden-item-title { font-size: 21px; line-height: 28px; font-weight: 500; margin-bottom: 25px; display: block; }
  &__hidden-item-title-span { color: #fff; border-bottom: 1px solid #55575d; transition: .3s; }
  &__hidden-item-title:hover &__hidden-item-title-span { border-bottom: 1px solid transparent; }
  &__hidden-item-point { color: #d8d9da; font-size: 15px; line-height: 22px; font-weight: 300; margin-bottom: 20px; display: block; transition: .3s; }
  &__hidden-item-point:hover { color: #fff; }
  &__hidden-article { position: relative; width: 50%; padding: 25px 0 25px 0; }
  &__hidden-article:before { content: ''; position: absolute; top: 0; left: -65px; width: 1px; height: 100%; background: #313339; }
  &__hidden-item-article-box { column-count: 2; }
  &__hidden-item-article-box &__hidden-item-point { padding-right: 15px; }
  &__hidden-item-btn { color: #fff; width: 230px; height: 45px; margin-top: 30px; border: 1px solid #818387; background: transparent; }

  &__block11 .block11__item-inner { border-bottom: 1px solid #E3EAEE; }
  &__block11 .block11__item { padding-bottom: 0; }
}

.html_overflow-hidden { overflow: hidden; }

@media (min-width: screen-xl-min) {
  .nav {
    &__container { max-width: 1800px; }
  }
}