.plate12 {
    display: flex; flex-wrap: wrap; justify-content: space-between;

    &__item {
        display: flex;
        position: relative;
        flex-direction: column;
        padding: 25px;
        width: calc(33.333% - 20px);
        background: white;
        z-index: 3;
        transition: .3s;


        &::after {
            content: url('https://test3.sorp.ae/assets/templates/main/img/background-imgs/apple-gray-bg.svg');
            z-index: -2;
            position: absolute;
            right: -5px;
            bottom: -9px;
        }

        &:hover {
            border-color: redCC; background: redCC; color: white;
            .plate12__description-header { color: white; }
            .plate12__list-item::before { background: white; }
        }

        /*      Modifiers   */

        &_large { width: 49%; } /* для двух колон в столбик*/

        &_no-icon-bg::after { display: none; }

        &_grid-two-vertical { width: auto; }

        /*          Borders          */
        &_gray-border { border: 4px solid #EBECEE; }
        &_dark-gray-border { border: 5px solid #7D879C; }

    }

    &__title {
        font-size: 23px;
        font-weight: 500;
        line-height: 30px;
        margin-bottom: 50px;
    }

    &__description {
        line-height: 24px;

        &-header {
            font-size: 21px;
            color: #4D4B5C;
            transition: .3s;
            margin-bottom: 25px;

            &_thin-text {
                font-weight: 300;
                line-height: 30px;
                color: black;
            }
        }

    }

    &__list {
        font-size: 15px;
        padding-left: 22px;

        &-item {
            font-size: 15px;
            margin-bottom: 28px;

            &::before {
                content: " ";
                background: redCC;
                width: 10px;
                height: 10px;
                display: inline-block;
                margin-left: -20px;
                margin-right: 10px;
            }

            &_gray-box::before { background: #85888e; }
        }
    }

    &_width1 &__item { width: 100%; }

}

@media (max-width: 775px) {
    .plate12__item { width: 100%; margin-bottom: 20px; }
}